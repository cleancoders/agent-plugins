{
  "description": "Auto-update cleancoders marketplace plugins on session start",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/auto-update.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
